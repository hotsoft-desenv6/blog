<div class="spam2">
<p>
  <h1> <%= @post.titulo %></h1>
</p>
<p>
  <%= @post.texto %>
</p>
<P><small>Visualizações: <%= @post.visualizacoes %></small></P>

 <br />

<h3>Comentarios</h3>
<h4><b>
  <%= @post.comentarios.length %> Comentario(s)
</b></h4>

<% @post.comentarios.each do |c| %>
  <p>
    <b> <%= c.nome %> ,</b> <em> diz:</em>
  </p>
  <p>
    <%= c.comentario%>
  </p>
<% end %>


<br />
<h5>Adicione um comentário:</h5>
<%= form_for([@post, @post.comentarios.build]) do |f| %>
    <div class="field">
      <%= f.text_field :nome, :class => "input-large", :placeholder => "Autor" %>
    </div>
    <div class="field">
      <%= f.text_area :comentario, :rows => 4, :class => "input-xxlarge", :placeholder => "Comentario" %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

</div>

